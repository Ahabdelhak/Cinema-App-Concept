<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shrikanthravi.cinemaappconcept.SeatSelectionActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/backdropIV"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_white_percent_80"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:transitionName="movieCard"
        android:layout_centerHorizontal="true"
        android:id="@+id/moviePosterCard"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="15dp"
        app:cardElevation="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:paddingTop="4dp"
            android:transitionName="moviePoster"
            android:id="@+id/moviePosterIV"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:id="@+id/videoLL"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
